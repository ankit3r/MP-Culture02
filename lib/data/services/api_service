// api_service.dart
import 'dart:convert';
import 'package:http/http.dart' as http;
import 'package:your_project_name/models/event_data_model.dart';

class ApiService   {
  final String baseUrl;

  ApiService({required this.baseUrl});
  Future<List<EventData>> getTodayPrograms() async {
    final response = await http.get(Uri.parse('$baseUrl/Api/today_programs'));

    if (response.statusCode == 200) {
      final List<dynamic> jsonData = json.decode(response.body);
      return jsonData.map((json) => EventData.fromJson(json)).toList();
    } else {
      throw Exception('Failed to load today\'s programs');
    }
  }
}
